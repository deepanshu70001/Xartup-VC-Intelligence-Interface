# GROQ_API_KEY: Required for Groq AI API calls.
GROQ_API_KEY="MY_GROQ_API_KEY"

# JWT_SECRET: Required for signing auth cookies/JWT.
JWT_SECRET="REPLACE_WITH_STRONG_SECRET"

# MONGODB_URI: Required MongoDB connection string for backend user auth storage.
# Example: mongodb+srv://user:password@cluster.mongodb.net/harmonicvc?retryWrites=true&w=majority
MONGODB_URI="mongodb+srv://<user>:<password>@<cluster>.mongodb.net/harmonicvc?retryWrites=true&w=majority"



# MONGODB_DB_NAME: Optional MongoDB database name override.
MONGODB_DB_NAME="harmonicvc"

# APP_URL: The URL where this applet is hosted.
# AI Studio automatically injects this at runtime with the Cloud Run service URL.
# Used for self-referential links, OAuth callbacks, and API endpoints.
APP_URL="MY_APP_URL"

# VITE_API_URL: Frontend API base URL (for deployed frontend pointing to external backend).
# Example: https://your-backend-domain.com
VITE_API_URL=""

# CORS_ORIGIN: Comma-separated allowed frontend origins for API requests.
# Example: https://your-app.vercel.app,https://www.yourdomain.com
CORS_ORIGIN=""

# CORS_ALLOW_VERCEL: If true, allow any https://*.vercel.app origin.
# Useful for Vercel preview deployments where URL changes often.
CORS_ALLOW_VERCEL="false"

# Cookie settings for cross-site auth.
# For HTTPS cross-site frontend/backend, use COOKIE_SECURE=true and COOKIE_SAMESITE=none
COOKIE_SECURE="true"
COOKIE_SAMESITE="none"
